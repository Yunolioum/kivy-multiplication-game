#:kivy 1.7.2

<GameBoard>:
    width: 500
    height: 500
    
    success_dependant_graphics: time_and_again_button
    input: answer
    
    numpad: content_box.number_buttons
    equation_widget: content_box.equation
    
    SuccessDependantGraphics:
        id: time_and_again_button
        width: 100
        height: 140
        size_hint: (None, None)
        center_y: self.position_y_multiplier * (root.height - self.height / 2)
        right: root.right - 50
        
    NumericTextInput:
        id: answer
        height: 100
        width: 400
        font_name: app.default_font_name
        font_size: 50
        center_x: root.center_x
        center_y: -1 * (root.center_y + root.height / 16 * 3)
        multiline: False
        readonly: root.input_is_correct
    
    BoxLayout:
        id: content_box
        orientation: 'vertical'
        
        equation: equation
        answer_presentation: answer_presentation
        number_buttons: number_buttons
        
        GridLayout: 
            id: equation
            height: 200
            size_hint: (1, .2)
            operand1: operand_left
            operand2: operand_right
            cols: 5
            
            Label:
                id: empty_left
                size_hint: (1, 1)
                
            Label:
                id: operand_left
                width: 100
                height: 100
                size_hint: (None, 1)
                font_size: 70
                font_name: app.default_font_name
                halign: 'right'
                text: str(app.randomize_operand())
            
            Label:
                id: operator
                size_hint: (None, 1)
                width: 20
                height: 20
                font_size: 70
                font_name: app.default_font_name
                halign: 'center'
                text: 'âˆ™'
                
            Label:
                id: operand_right
                size_hint: (None, 1)
                width: 100
                height: 100
                font_size: 70
                font_name: app.default_font_name
                halign: 'left'
                text: str(app.randomize_operand())
                
            Label:
                id: empty_right
                size_hint: (1, 1)
            
        Label:
            id: answer_presentation
            height: 100
            size_hint: (1, None)
            font_name: app.default_font_name
            font_size: 40
            text: str(root._current_guess)
            
        GridLayout:
            id: number_buttons
            size_hint: (1, 1)
            #Paint it red so we know where it is...
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 0.3 #red
                Rectangle:
                    pos: self.pos
                    size: self.size
                    
            cols: 3
            
            NumButton:
                id: num_1
                text: '1'
                on_press: root.numbutton_pressed(self, self.text)
            NumButton:
                id: num_2
                text: '2'
                on_press: root.numbutton_pressed(self, self.text)
            NumButton:
                id: num_3
                text: '3'
                on_press: root.numbutton_pressed(self, self.text)
            NumButton:
                id: num_4
                text: '4'
                on_press: root.numbutton_pressed(self, self.text)
            NumButton:
                id: num_5
                text: '5'
                on_press: root.numbutton_pressed(self, self.text)
            NumButton:
                id: num_6
                text: '6'
                on_press: root.numbutton_pressed(self, self.text)
            NumButton:
                id: num_7
                text: '7'
                on_press: root.numbutton_pressed(self, self.text)
            NumButton:
                id: num_8
                text: '8'
                on_press: root.numbutton_pressed(self, self.text)
            NumButton:
                id: num_9
                text: '9'
                on_press: root.numbutton_pressed(self, self.text)
            Label:
                id: num_empty_0
            NumButton:
                id: num_0
                text: '0'
                on_press: root.numbutton_pressed(self, self.text)
            NumButton:
                id: erase
                text: 'X'
                on_press: root.erase_pressed(self)
            
<SuccessDependantGraphics>:
    orientation: 'vertical'
    
    Label:
        id: time_to_solve_label
        font_size: 14
        center_x: root.center_x
        center_y: root.center_y + root.height / 4
        text: root.time_to_solve
        size_hint: (1, 1)
        
    Button:
        id: button
        text: 'Again'
        center_x: root.center_x
        center_y: root.center_y - root.height / 8 * 3
        font_size: 20
        height: 100
        size_hint: (1, None)
        on_press: app.next_game()
        
<NumButton@Button>:
    font_name: 'fonts/Scratch.ttf'
    font_size: 60
    background_normal: 'images/button-normal-black.png'
    background_down: 'images/button-pressed-black.png'
    halign: 'center'
    size_hint: (None, None)
